<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_list_icon"
        android:layout_width="@dimen/step_icon_size"
        android:layout_height="@dimen/step_icon_size"
        android:layout_marginBottom="@dimen/activity_margin_16dp"
        android:layout_marginLeft="@dimen/step_icon_margin"
        android:layout_marginRight="@dimen/step_icon_margin"
        android:layout_marginTop="@dimen/activity_margin_16dp"
        android:src="@drawable/ic_stars_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_step_number"
        android:layout_width="@dimen/step_text_width"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/step_item_list_margin_top_bottom"
        android:layout_marginLeft="@dimen/step_text_keyline"
        android:layout_marginRight="@dimen/step_text_horizontal_margin"
        android:layout_marginTop="@dimen/step_item_list_margin_top_bottom"
        android:textSize="@dimen/widget_recipe_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/step_number" />

    <TextView
        android:id="@+id/tv_short_description"
        android:layout_width="@dimen/step_text_width"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/step_text_keyline"
        android:layout_marginRight="@dimen/step_text_horizontal_margin"
        android:textSize="@dimen/widget_recipe_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_step_number"
        tools:text="@string/short_description" />

</android.support.constraint.ConstraintLayout>