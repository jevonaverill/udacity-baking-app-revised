<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_widget_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin_8dp"
        android:layout_marginRight="@dimen/activity_margin_8dp"
        android:layout_marginTop="@dimen/activity_margin_8dp"
        android:contentDescription="@string/widget_content_description"
        android:text="@string/appwidget_text"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/widget_recipe_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_widget_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_margin_8dp"
        android:layout_marginLeft="@dimen/activity_margin_8dp"
        android:layout_marginRight="@dimen/activity_margin_8dp"
        android:layout_marginTop="@dimen/activity_margin_8dp"
        android:contentDescription="@string/widget_content_description"
        android:text="@string/appwidget_text"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/widget_ingredient_text_size"
        android:textStyle="italic" />

</LinearLayout>